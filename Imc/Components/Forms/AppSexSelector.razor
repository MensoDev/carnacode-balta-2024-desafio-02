@inherits  AppComponentBase

<div class="flex flex-column gap-1">
    <InputSelect
        id="@Id"
        class="@ClassInput"
        placeholder="@Placeholder"
        Value="@Value"
        ValueChanged="ValueChanged"
        ValueExpression="ValueExpression"
        style="@Style">
        
        <option value="">Select</option>
        <option value="@Sex.Male">M</option>
        <option value="@Sex.Female">F</option>
        
    </InputSelect>

    <ValidationMessage For="ValueExpression" />
</div>

@code 
{
    private string Id { get; } = Guid.NewGuid().ToString("N");
    
    private string ClassInput => new CssBuilder("app-input")
        .AddClass("app-input-rounded", Rounded)
        .AddClass(Class).Build();
    
    [Parameter]  public bool Rounded { get; set; }
    
    [Parameter] [EditorRequired] public Sex? Value { get; set; }

    [Parameter] public EventCallback<Sex?> ValueChanged { get; set; }

    [Parameter] public Expression<Func<Sex?>> ValueExpression { get; set; } = default!;
    
    [Parameter] public string? Placeholder { get; set; }
}